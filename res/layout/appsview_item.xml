<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" android:gravity="center_horizontal">
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="150dp"
                  android:paddingLeft="10dp" android:gravity="center_horizontal">
        <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1">
            <ImageView
                    android:layout_width="110dp"
                    android:layout_height="1px"
                    android:background="#ffffffff"
                    android:layout_marginTop="45dp" android:layout_marginLeft="5dp"/>
            <TextView android:id="@+id/tVName"
                      android:layout_width="100dp"
                      android:layout_height="wrap_content"
                      android:textSize="14dip"
                      android:singleLine="true"
                      android:ellipsize="marquee"
                      android:textColor="#ffffffff"
                      android:layout_weight="1"
                      android:layout_marginTop="20dp" android:layout_marginLeft="5dp"
                    />
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="190dp"
                android:layout_height="fill_parent">
            <ImageView
                    android:layout_width="160dp"
                    android:layout_height="fill_parent"
                    android:background="#ffe1e1e1" android:layout_marginTop="15dp"
                    android:layout_marginLeft="18dp"/>
            <ImageView android:id="@+id/iVIcon"
                       android:layout_width="40dp"
                       android:layout_height="40dp"
                       android:scaleType="centerInside"
                       android:layout_marginTop="18dp"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>